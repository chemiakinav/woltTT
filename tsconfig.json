{
    "compilerOptions": {
      "outDir": "dist",
      "module": "esnext",
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "declaration": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "*": [
          "*",
          "src/*"
        ]
      },
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "src/__tests__", "src/__mocks__"]
  }